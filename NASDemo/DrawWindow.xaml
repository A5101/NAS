<Window x:Class="NASDemo.DrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Нарисовать кириллическую букву" 
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Нарисуйте кириллическую букву" 
                   FontSize="14" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>

        <!-- Canvas для рисования -->
        <Border Grid.Row="1" Margin="10" BorderBrush="Black" 
                BorderThickness="2" Background="White">
            <Canvas x:Name="drawCanvas" 
                    Background="White"
                    MouseDown="DrawCanvas_MouseDown"
                    MouseMove="DrawCanvas_MouseMove"
                    MouseUp="DrawCanvas_MouseUp"/>
        </Border>

        <!-- Панель управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnOk" Content="✅ Готово" 
                    Click="btnOk_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="btnClear" Content="🗑️ Очистить" 
                    Click="btnClear_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="btnCancel" Content="❌ Отмена" 
                    Click="btnCancel_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>