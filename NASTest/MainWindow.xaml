<Window x:Class="NASTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NASTest"
        mc:Ignorable="d"
             Title="Распознавание букв" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Область рисования -->
        <Border Grid.Column="0" Margin="10" BorderBrush="Gray" BorderThickness="2" Background="White">
            <Canvas x:Name="drawingCanvas" 
                    Background="White"
                    MouseDown="Canvas_MouseDown"
                    MouseMove="Canvas_MouseMove"
                    MouseUp="Canvas_MouseUp"
                    MouseLeave="Canvas_MouseLeave"/>
        </Border>

        <!-- Панель управления -->
        <StackPanel Grid.Column="1" Width="200" Margin="10">
            <TextBlock Text="Распознавание букв" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <Button x:Name="btnLoadModel" 
                    Content="📁 Загрузить модель" 
                    Click="BtnLoadModel_Click"
                    Height="35" Margin="0,0,0,10"/>

            <Button x:Name="btnRecognize" 
                    Content="🔍 Распознать" 
                    Click="BtnRecognize_Click"
                    Height="35" Margin="0,0,0,10"/>

            <Button x:Name="btnClear" 
                    Content="🧹 Очистить" 
                    Click="BtnClear_Click"
                    Height="35" Margin="0,0,0,10"/>

            <Separator Margin="0,10"/>

            <TextBlock Text="Настройки рисования:" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Толщина:" VerticalAlignment="Center"/>
                <Slider x:Name="brushSizeSlider" 
                        Minimum="1" Maximum="20" Value="8"
                        Width="100" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Цвет:" VerticalAlignment="Center"/>
                <ComboBox x:Name="colorComboBox" 
                         Width="80" 
                         SelectionChanged="ColorComboBox_SelectionChanged">
                    <ComboBoxItem Content="Черный" Foreground="Black" IsSelected="True"/>
                    <ComboBoxItem Content="Синий" Foreground="Blue"/>
                    <ComboBoxItem Content="Красный" Foreground="Red"/>
                </ComboBox>
            </StackPanel>

            <Separator Margin="0,10"/>

            <TextBlock Text="Результат:" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>

            <Border BorderBrush="LightGray" BorderThickness="1" 
                    Background="White" Height="100" 
                    Margin="0,0,0,10">
                <TextBlock x:Name="tbResult" 
                          Text="Нарисуйте букву и нажмите 'Распознать'"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"/>
            </Border>

            <TextBlock Text="Вероятности:" 
                       FontWeight="Bold" 
                       Margin="0,10,0,5"/>

            <ListBox x:Name="lbProbabilities" 
                     Height="150" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Letter}" Width="30"/>
                            <ProgressBar Value="{Binding Probability}" 
                                       Maximum="100" 
                                       Width="100" 
                                       Height="15" 
                                       Margin="5,0"/>
                            <TextBlock Text="{Binding Percentage}" 
                                      Width="40" 
                                      Margin="5,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock x:Name="tbModelStatus" 
                      Text="Модель не загружена" 
                      Foreground="Red" 
                      Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
